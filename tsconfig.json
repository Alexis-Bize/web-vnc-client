{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "removeComments": true,
        "allowSyntheticDefaultImports": false,
        "alwaysStrict": true,
        "outDir": "./dist",
        "declaration": true,
        "sourceMap": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./dist",
        "./node_modules"
    ]
}
